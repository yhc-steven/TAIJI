page{
  height: 100%;
  width: 100%;
  background: #ccc
}
.cont{
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  background: url(//wx3.sinaimg.cn/orj360/a93aa634ly1fva09fabx9j20v91vo4qq.jpg) no-repeat top left;
  background-size:100% auto ;
  overflow-y: auto;
}
.contF{
  display: flex;
  width: 100%;
  height: auto;
  flex-flow: column nowrap;
  align-items: center;
  padding-top: 200rpx;
}
.userInfo{
  display: flex;
  flex-flow: column nowrap;
}
.picName{
  width: 80rpx;
	height: 80rpx;
	background-color: #e5a62e;
	border:  1rpx solid #FFFFFF;
  border-radius: 50%;
}
.name{
  color: #FFFFFF;
  font-size: 30rpx;
}
.pf{
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 40rpx;
}
.pf .sendWord{
  width: 300rpx;
	font-size: 30rpx;
	font-weight: normal;
	font-stretch: normal;
  word-wrap: break-word;
	line-height: 46rpx;
	letter-spacing: 0px;
	color: #ffffff;
  opacity: 0.6;
  margin-right: 10rpx;
}
.rich_class{
  opacity: 0.6;
  width: 400rpx;
  word-wrap: break-word;
  line-height: 40rpx;
  color: #FFFFFF;
  padding: 15rpx 20rpx;
  border: 1rpx solid #65b732;
}
.usermotto{
  width: 100%;
  margin: 50rpx 0;
  text-align: center;
}
.grade{
  display: flex;
  flex-flow: column nowrap;
  justify-content: center;
  align-items: center;
}
.grade .score{
  width: 43rpx;
  height: 43rpx;
  line-height: 43rpx;
  text-align: center;
  font-size: 34rpx;
  color: #FFFFFF;
  opacity: 0.74;
  border: 1px solid #65b732;
}
.grade .compre{
  height: 24rpx;
	font-size: 23rpx;
	font-weight: normal;
	font-stretch: normal;
	line-height: 24px;
	letter-spacing: 0px;
	color: #ffffff;
	opacity: 0.6;
}
.testimonials{
  display: flex;
  flex-flow: row wrap;
  justify-content: center;
  align-items: center;
}
.testimCont{
  display: flex;
  align-items: center;
  height: 48rpx;
  line-height: 48rpx;
  font-size: 26rpx;
	letter-spacing: 1rpx;
  color: #e1e1e1;
}
.testimWord{
  padding: 0 13rpx;
  height: 48rpx;
  line-height: 48rpx;
  font-size: 26rpx;
	letter-spacing: 1rpx;
  color: #e1e1e1;
  border: 1rpx solid #6cb740;
  margin-left: 10rpx;
}
.mood{
  height: 49rpx;
  line-height: 49rpx;
  font-size: 26rpx;
  letter-spacing: 1rpx;
  margin-left: 25rpx;  
  display: flex;
  align-items: center;
  color: #FFFFFF;

}
.mood-icon{
  width: 49rpx;
  height: 49rpx;
  border: none;
  border-radius: 50%;
  overflow: hidden;
  margin-left: 10rpx;
}
.gzCont{
  width: 100%;
  height: 185rpx;
  line-height: 135rpx;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  box-sizing: border-box;
  padding: 50rpx 60rpx 0 0;
}
.gzDescribe{
  width: 269rpx;
  word-wrap: break-word;
	font-size: 30rpx;
	font-weight: normal;
	font-stretch: normal;
	line-height: 40rpx;
	letter-spacing: 0px;
	color: #ffffff;
	opacity: 0.6;
}
.gzh{
  width: 131rpx;
  height: 131rpx;
  margin-left: 50rpx;
}
.shareCont{
  width: 100%;
  margin-top: 50rpx;
  height: 88rpx;
  margin-bottom: 80rpx;
}
.shareBtn{
  margin: 0 auto;
  width: 716rpx;
  background: rgba(255,255,255,0.5);
  font-size: 42rpx;
  font-weight: bold;
  color: #FFFFFF;
  letter-spacing: 4rpx;
}
.imgRot{
  margin: 0 auto;
  transform-origin: 50% 50%;
  animation: rotateT 60s linear infinite;
}
@keyframes rotateT{
  from{
    transform: rotate(0deg);
  }
  to{
    transform: rotate(360deg);
  }
}
